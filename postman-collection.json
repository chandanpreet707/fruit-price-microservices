{
  "info": {
    "name": "Fruit Price Microservices",
    "description": "Local-host test collection for Fruit-Month-Price (8000) and Fruit-Total-Price (8100) services.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "FMP Service",
      "item": [
        {
          "name": "Get Banana Price in July",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/fruit-month-price/fruit/banana/month/jul"
          }
        },
        {
          "name": "Get Apple Price in December",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/fruit-month-price/fruit/apple/month/dec"
          }
        },
        {
          "name": "Invalid Fruit Test (404)",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/fruit-month-price/fruit/xyz/month/jan"
          }
        },
        {
          "name": "Debug – list sample docs",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/fruit-month-price/debug/all"
          }
        },
        {
          "name": "FMP Health Check",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/fruit-month-price/health"
          }
        }
      ]
    },
    {
      "name": "FTP Service",
      "item": [
        {
          "name": "Get Total Price – 10 kg Banana in July",
          "request": {
            "method": "GET",
            "url": "http://localhost:8100/fruit-total-price/fruit/banana/month/jul/quantity/10"
          }
        },
        {
          "name": "Get Total Price – 5.5 kg Cherry in May",
          "request": {
            "method": "GET",
            "url": "http://localhost:8100/fruit-total-price/fruit/cherry/month/may/quantity/5.5"
          }
        },
        {
          "name": "Invalid Quantity Test (should 400/404)",
          "request": {
            "method": "GET",
            "url": "http://localhost:8100/fruit-total-price/fruit/banana/month/jul/quantity/0"
          }
        },
        {
          "name": "Debug – list sample totals",
          "request": {
            "method": "GET",
            "url": "http://localhost:8100/fruit-total-price/debug/all"
          }
        },
        {
          "name": "FTP Health Check",
          "request": {
            "method": "GET",
            "url": "http://localhost:8100/fruit-total-price/health"
          }
        }
      ]
    }
  ]
}
